<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?ChiliSurfaceBackground"
    tools:context=".MainActivity">

    <com.design2.chili2.view.container.ExpandableContainer
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isExpanded="false"
        android:layout_marginTop="@dimen/padding_16dp"
        app:isNeedToSaveExpandedState="true"
        app:title="Open page">
        <Button
            android:id="@+id/btn_start_form"
            style="@style/Chili.ButtonStyle.NewAdditional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_16dp"
            android:layout_marginTop="@dimen/padding_16dp"
            android:layout_marginHorizontal="@dimen/padding_16dp"
            android:text="Open form"/>

        <Button
            android:id="@+id/btn_start_agreemrnt"
            style="@style/Chili.ButtonStyle.NewAdditional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_16dp"
            android:layout_marginHorizontal="@dimen/padding_16dp"
            android:text="Open agreement"/>

        <Button
            android:id="@+id/btn_start_oferta"
            style="@style/Chili.ButtonStyle.NewAdditional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_16dp"
            android:layout_marginHorizontal="@dimen/padding_16dp"
            android:text="Open pdf oferta"/>

        <Button
            android:id="@+id/btn_start_call_web_view"
            style="@style/Chili.ButtonStyle.NewAdditional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_16dp"
            android:layout_marginHorizontal="@dimen/padding_16dp"
            android:text="Open call webView"/>
    </com.design2.chili2.view.container.ExpandableContainer>

    <Button
        android:id="@+id/btn_start"
        style="@style/Chili.ButtonStyle.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_16dp"
        android:text="Start sample process flow"/>

    <com.design2.chili2.view.container.ExpandableContainer
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isNeedToSaveExpandedState="true"
        app:title="Settings">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_16dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sw_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_8dp"
                android:text="Dark Theme"/>

        </LinearLayout>

    </com.design2.chili2.view.container.ExpandableContainer>

</LinearLayout>