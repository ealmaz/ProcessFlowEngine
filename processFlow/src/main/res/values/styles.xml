<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">?attr/ChiliPrimaryTextColor</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="colorAccent">@color/magenta_1</item>
        <item name="colorControlNormal">@color/black_5</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:background">?attr/ChiliDialogBackground</item>
        <item name="android:textColorPrimary">?attr/ChiliPrimaryTextColor</item>
        <item name="android:textColorSecondary">?attr/ChiliPrimaryTextColor</item>
        <item name="android:titleTextColor">?attr/ChiliPrimaryTextColor</item>
    </style>

    <style name="DropDownBottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/DropDownModalBottomSheetStyle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="DropDownModalBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ProcessFlowAdditionalButtonStyle" parent="Chili.ButtonStyle.Additional">
        <item name="android:textSize">@dimen/view_14dp</item>
    </style>

    <style name="ProcessFlowPrimaryButtonTextAppearance" parent="Chili.H14.Primary.Bold">
        <item name="android:textSize">@dimen/view_14dp</item>
        <item name="android:textColor">@color/chili_state_color_button_text_primary</item>
    </style>

</resources>